<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.Tabs" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.Tabs.Text</item>
        <item name="tabSelectedTextColor">@color/tab_selected</item>
    </style>

    <style name="AppTheme.Tabs.Text" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_unselected</item>
    </style>



</resources>
