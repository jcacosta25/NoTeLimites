<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.burocreativo.notelimites.screens.DataBinder" />
        <variable
            name="venueevent"
            type="com.burocreativo.notelimites.io.models.events.VenueEvents" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/element_page_list"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:imageLoader="@{venueevent.imageURL}"/>


        <de.morrox.fontinator.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{venueevent.eventName}"
            android:textColor="@android:color/white"
            />

    </LinearLayout>
</layout>