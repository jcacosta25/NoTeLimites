<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.burocreativo.notelimites.screens.DataBinder" />

        <variable
            name="user"
            type="com.burocreativo.notelimites.io.models.user.UserResponse" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/back_inicio"
            android:layout_width="match_parent"
            android:layout_height="235dp">

            <android.support.v7.widget.Toolbar
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:id="@+id/toolbar"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic_img"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    app:civ_border_color="#FFF"
                    app:civ_border_width="2dp"
                    />

                <de.morrox.fontinator.FontTextView
                    android:id="@+id/profile_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:font="MyriandPro-Regular.otf"
                    android:layout_marginTop="16dp"
                    android:text="@{user.name}"
                    android:textColor="@color/tab_selected"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            style="@style/AppTheme.Tabs"
            app:tabIndicatorColor="@android:color/white"
            app:tabBackground="@drawable/profile_selected_tab"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/profile_viewpager"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
</layout>