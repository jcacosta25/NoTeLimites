<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:background="@drawable/simple_plan"
    android:orientation="vertical">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <de.morrox.fontinator.FontTextView
                android:id="@+id/event_day_txt"
                app:font="MyriandPro-lt.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="24"
                />
            <de.morrox.fontinator.FontTextView
                android:id="@+id/event_month_txt"
                app:font="MyriandPro-lt.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sept."
                android:gravity="center"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <de.morrox.fontinator.FontTextView
                android:id="@+id/event_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simple Plan"
                android:maxLines="1"
                app:font="MyriandPro-Regular.otf"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                />

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.morrox.fontinator.FontTextView
                    android:id="@+id/event_place_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_location"
                    android:text="Arena Monterrey"
                    app:font="MyriandPro-lt.otf"
                    android:textColor="@android:color/white"
                    />

                <de.morrox.fontinator.FontTextView
                    android:id="@+id/event_people_attendants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="292 Pers."
                    app:font="MyriandPro-lt.otf"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@drawable/ic_person"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:background="@drawable/btn_like_event"
                android:layout_alignParentRight="true"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>