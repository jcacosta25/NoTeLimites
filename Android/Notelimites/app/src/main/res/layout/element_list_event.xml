<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.burocreativo.notelimites.screens.DataBinder"/>
        <variable
            name="event"
            type="com.burocreativo.notelimites.io.models.events.Event"/>
    </data>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back_inicio"
        app:imageLoader="@{event.imageURL}"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <de.morrox.fontinator.FontTextView
                    android:id="@+id/event_day_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="@{event.initDate != null ? DataBinder.formatDay(event.initDate): event.eventName}"
                    app:font="gothamhtf_black.otf" />

                <de.morrox.fontinator.FontTextView
                    android:id="@+id/event_month_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:text="@{event.initDate != null ? DataBinder.formatMonth(event.initDate): event.eventName}"
                    app:font="myriadpro_regular.otf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <de.morrox.fontinator.FontTextView
                    android:id="@+id/event_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@{event.eventName}"
                    app:font="gothamhtf_black.otf" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <de.morrox.fontinator.FontTextView
                        android:id="@+id/event_place_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawableStart="@drawable/ic_location"
                        android:text="@{event.venueName}"
                        android:textColor="@android:color/white"
                        app:font="myriadpro_regular.otf" />

                    <de.morrox.fontinator.FontTextView
                        android:id="@+id/event_people_attendants"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawableStart="@drawable/ic_person"
                        android:textColor="@android:color/white"
                        android:text="@{DataBinder.formatInt(event.attendings)}"
                        app:font="myriadpro_regular.otf" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/like_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:background="@{event.followed ? @drawable/ic_favorite:@drawable/ic_favorite_border}" />
    </RelativeLayout>
</FrameLayout>
</layout>