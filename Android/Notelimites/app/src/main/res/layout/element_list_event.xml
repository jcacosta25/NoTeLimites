<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
  <data>
    <import type="com.burocreativo.notelimites.screens.DataBinder"/>
    <variable
      name="event"
      type="com.burocreativo.notelimites.io.models.events.Event"/>
  </data>
  <FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="324dp"
    android:layout_height="160dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/event_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:contentDescription="@string/event_img"
      android:scaleType="centerCrop"
      android:src="@drawable/back_inicio"
      app:imageLoader="@{event.imageURL}"/>

    <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/gradient"
      />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <de.morrox.fontinator.FontTextView
            android:id="@+id/event_day_txt"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@{event.initDate != null ? DataBinder.formatDay(event.initDate): event.eventName}"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            app:font="gothamhtf_black.otf"/>

          <de.morrox.fontinator.FontTextView
            android:id="@+id/event_month_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{event.initDate != null ? DataBinder.formatMonth(event.initDate): event.eventName}"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:font="myriadpro_regular.otf"/>
        </LinearLayout>

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="16dp"
          android:layout_marginLeft="16dp"
          android:orientation="vertical">

          <de.morrox.fontinator.FontTextView
            android:id="@+id/event_name_txt"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@{event.eventName}"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:font="gothamhtf_black.otf"/>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <de.morrox.fontinator.FontTextView
              android:id="@+id/event_place_txt"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableLeft="@drawable/ic_location"
              android:drawableStart="@drawable/ic_location"
              android:text="@{event.venueName}"
              android:textColor="@android:color/white"
              app:font="myriadpro_regular.otf"/>

            <de.morrox.fontinator.FontTextView
              android:id="@+id/event_people_attendants"
              android:layout_width="130dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginLeft="16dp"
              android:drawableLeft="@drawable/ic_person"
              android:drawableStart="@drawable/ic_person"
              android:text="@{DataBinder.formatInt(event.attendings)}"
              android:textColor="@android:color/white"
              app:font="myriadpro_regular.otf"/>
          </LinearLayout>
        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="bottom|end">

      <ImageButton
        android:id="@+id/like_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/like_event"
        android:background="@{event.followed ? @drawable/ic_favorite:@drawable/ic_favorite_border}"/>

      <ImageButton
        android:id="@+id/add_calendar_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/add_to_calendar"
        android:src="@drawable/ic_add"/>
    </RelativeLayout>
  </FrameLayout>
</layout>